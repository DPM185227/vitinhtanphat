@model IEnumerable<StoreTanPhat.Models.PhanHoiBinhLuan>

@{
    ViewBag.Title = "QUẢN LÝ PHẢN HỒI";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    a {
        color: white;
    }

    a:hover {
        color: white;
    }
</style>

<div class="card">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        <p class="btn btn-primary">
            @Html.ActionLink("Thêm mới", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NoiDung)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayBinhLuan)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HienThi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BinhLuan.NoiDung)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KhachHang.HoTen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NhanVien.TenNhanVien)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoiDung)
                    </td>
                    <td>
                        @if (item.HinhAnh == "/Images/Comment/No_Image.png")
                        {
                            <img src="~/Images/Comment/No_Image.png" width="100" />
                        }
                        else
                        {
                            <img src="~/@item.HinhAnh" width="100" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayBinhLuan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HienThi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BinhLuan.NoiDung)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KhachHang.HoTen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NhanVien.TenNhanVien)
                    </td>
                    <td>
                        <a class="btn btn-info text-white" href="@Url.Action("Edit", "PhanHoiBinhLuan", new { id = item.ID_PhanHoiBinhLuan })">Sửa</a> <span> |</span>
                        <a class="btn btn-danger text-white" href="@Url.Action("Delete", "PhanHoiBinhLuan", new { id = item.ID_PhanHoiBinhLuan })">Xóa</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

