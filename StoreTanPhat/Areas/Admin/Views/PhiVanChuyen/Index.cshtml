@model IEnumerable<StoreTanPhat.Models.PhiVanChuyen>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    a{
        color:white;
    }
    a:hover{
        color:white;
    }
</style>
<div class="card">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        <p class="btn btn-primary">
            @Html.ActionLink("Thêm mới", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GiaVanChuyen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GhiChu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Huyen.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tinh.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Xa.name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GiaVanChuyen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GhiChu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Huyen.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tinh.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Xa.name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id_PhiVanChuyen }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id_PhiVanChuyen }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id_PhiVanChuyen })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


