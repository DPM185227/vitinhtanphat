@model StoreTanPhat.Models.PhiVanChuyen

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ID_Tinh, "ID_Tinh", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.DropDownList("ID_Tinh", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_Tinh, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ID_Huyen, "ID_Huyen", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.DropDownList("ID_Huyen", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_Huyen, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ID_Xa, "ID_Xa", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.DropDownList("ID_Xa", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_Xa, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GiaVanChuyen, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.GiaVanChuyen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GiaVanChuyen, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Thêm mới" class="btn btn-primary" /> OR <a href="@Url.Action("Index")" class="btn btn-primary">Trở về danh sách</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
