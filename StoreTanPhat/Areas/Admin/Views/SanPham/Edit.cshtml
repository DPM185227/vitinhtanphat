@model StoreTanPhat.Models.SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card mt-3 border border-primary shadow">
    <h5 class="card-header bg-primary text-white">@ViewBag.Title</h5>
    <div class="card-body">

        @using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID_SanPham)

            <div class="form-group">
                @Html.LabelFor(model => model.ID_ThuongHieu, "ID_ThuongHieu", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("ID_ThuongHieu", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_ThuongHieu, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ID_DanhMucSanPhamCon, "ID_DanhMucSanPhamCon", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("ID_DanhMucSanPhamCon", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_DanhMucSanPhamCon, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TenSanPham, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GiaBan, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GiaKhuyenMai, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.GiaKhuyenMai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaKhuyenMai, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DuLieuHinhAnh)
                <br />
                @Html.TextBoxFor(model => model.DuLieuHinhAnh, new { @class = "form-control-file", type = "file" })
                @Html.ValidationMessageFor(model => model.DuLieuHinhAnh, "", new { @class = "text-danger" })
                <input name="OldImage" value="@Model.HinhAnhDaiDien" type="hidden" />
                <br />
                @if (ViewBag.Error != null)
                {
                    <p class="badge rounded-pill badge-danger text-white" style="font-size:15px;font-weight:bold">@ViewBag.Error</p>
                }
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Motasanpham, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextAreaFor(model => model.Motasanpham, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Motasanpham, "", new { @class = "text-danger" })
                <script>
                   // đặt ID cho đối tượng nào
                    CKEDITOR.replace(@Html.IdFor(model => model.Motasanpham), {
                    height: 200
                });
                </script>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TinhTrang)
                @Html.DropDownListFor(model => model.TinhTrang, new SelectList(new[] {
                    new SelectListItem {Value = null, Text = "-- Chọn --" },
                    new SelectListItem {Value = "0", Text = "Còn hàng" },
                    new SelectListItem {Value = "1", Text = "Hết hàng" },
                }, "Value", "Text"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BaoHanh)
                @Html.DropDownListFor(model => model.BaoHanh, new SelectList(new[] {
                    new SelectListItem {Value = null, Text = "-- Chọn --" },
                    new SelectListItem {Value = "0", Text = "12 tháng" },
                    new SelectListItem {Value = "1", Text = "24 tháng" },
                }, "Value", "Text"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BaoHanh, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TinhTrangHienThi)
                @Html.DropDownListFor(model => model.TinhTrangHienThi, new SelectList(new[] {
                    new SelectListItem {Value = null, Text = "-- Chọn --" },
                    new SelectListItem {Value = "0", Text = "Ẩn đi" },
                    new SelectListItem {Value = "1", Text = "Hiện ra" },
                }, "Value", "Text"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TinhTrangHienThi, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TinhTrangHienThi)
                @Html.DropDownListFor(model => model.TinhTrangHienThi, new SelectList(new[] {
                    new SelectListItem {Value = null, Text = "-- Chọn --" },
                    new SelectListItem {Value = "0", Text = "Nổi bật" },
                    new SelectListItem {Value = "1", Text = "Không" },
                }, "Value", "Text"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TinhTrangHienThi, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.KhuyenMai, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextAreaFor(model => model.KhuyenMai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KhuyenMai, "", new { @class = "text-danger" })
                <script>
                   // đặt ID cho đối tượng nào
                    CKEDITOR.replace(@Html.IdFor(model => model.KhuyenMai), {
                    height: 200
                });
                </script>
            </div>

            <div class="form-group mt-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu Lại" class="btn btn-primary" style="font-weight:bold;" /> hoặc <span class="btn btn-info">@Html.ActionLink("Back to List", "Index")</span>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
