@model IEnumerable<StoreTanPhat.Models.DanhMucSanPham>
@using StoreTanPhat.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    a {
        color: white;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            color: white;
            text-decoration: none;
        }
</style>
<div class="card mt-3 border border-success shadow">
    <h5 class="card-header bg-success text-white">@ViewBag.Title</h5>
    <div class="card-body">
        <p class="btn btn-primary text-white">
            @Html.ActionLink("Tạo mới", "Create")
        </p>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenDanhMuc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TinhTrangHienThi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnh)
                </th>
                <th>
                    Danh Mục Con
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenDanhMuc)
                    </td>
                    <td>
                        @if (item.TinhTrangHienThi == 0)
                        {
                            <span>Ẳn đi</span>
                        }
                        else
                        {
                            <span>Hiện ra</span>
                        }
                    </td>
                    <td>
                        <img src="~/@item.HinhAnh" width="100" />
                    </td>
                    <td>
                        @{
                            var catechild = (List<DanhMucSanPhamCon>)ViewBag.DanhMucCon;
                            var count_CateChild = catechild.Where(m => m.ID_DanhMucSanPham == item.ID_DanhMuc).Count();
                        }
                        <a class="btn btn-info text-white" href="@Url.Action("Index","DanhMucSanPhamCon",new { id = item.ID_DanhMuc})">@count_CateChild Danh Mục</a>
                    </td>
                    <td>
                        @if (catechild.Where(m => m.ID_DanhMucSanPham == item.ID_DanhMuc).FirstOrDefault() != null)
                        {
                            <a class="btn btn-info text-white" href="@Url.Action("Edit", "DanhMucSanPham", new { id = item.ID_DanhMuc })">Sửa</a>
                        }
                        else
                        {
                            <!--truyền id qua Hàm Edit-->
                            <a class="btn btn-info text-white" href="@Url.Action("Edit", "DanhMucSanPham", new { id = item.ID_DanhMuc })">Sửa</a> <span> |</span>
                            <a class="btn btn-danger text-white" href="@Url.Action("Delete", "DanhMucSanPham", new { id = item.ID_DanhMuc })">Xóa</a>
                        }

                    </td>
                </tr>
            }

        </table>
    </div>
</div>
