@model StoreTanPhat.Models.HinhAnhSanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<style>
    a {
        color: white;
        font-weight: bold;
        text-decoration: none;
    }

        a:hover {
            color: black;
        }
</style>

<div class="card mt-3 border border-primary shadow">
    <h5 class="card-header bg-primary text-white">@ViewBag.Title</h5>
    <div class="card-body">
        @using (Html.BeginForm("Create", "HinhAnhSanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.DuLieuHinhAnh)
                <br />
                <br />
                @Html.TextBoxFor(model => model.DuLieuHinhAnh, new { @class = "form-control-files", @type = "file", @multiple = "multiple" })
                @Html.ValidationMessageFor(model => model.DuLieuHinhAnh, "", new { @class = "text-danger" })
                <br />
                @if (ViewBag.Error != null)
                {
                    <p class="badge rounded-pill badge-danger text-white" style="font-size:15px;font-weight:bold">@ViewBag.Error</p>
                }
            </div>

            <div class="form-group mt-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm mới" class="btn btn-primary" style="font-weight:bold;" /> OR <span class="btn btn-info">@Html.ActionLink("Back to List", "Index")</span>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
