@model StoreTanPhat.Models.DatHang

@{
    ViewBag.Title = "XOÁ ĐẶT HÀNG";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card mt-3 border border-primary">
    <h5 class="card-header bg-primary text-white">@ViewBag.Title</h5>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                Bạn có muốn xóa đặt hàng của <strong>@Model.KhachHang.HoTen</strong> không?
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="form-actions no-color">
                <input type="submit" value="Xác nhận xóa" class="btn btn-danger" /> hoặc <a class="btn btn-warning" href="@Url.Action("Index")">Trở về trang chủ</a>
            </div>
        }
    </div>
</div>
