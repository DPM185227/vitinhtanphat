@model StoreTanPhat.Models.DanhMucSanPhamCon

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card mt-3">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "DanhMucSanPhamCon", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID_DMSPC)

            <div class="form-group">
                @Html.LabelFor(model => model.ID_DanhMucSanPham, "ID_DanhMucSanPham", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("ID_DanhMucSanPham", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_DanhMucSanPham, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TenDMSPC)
                @Html.EditorFor(model => model.TenDMSPC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDMSPC, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TinhTrangHienThi)
                @Html.DropDownListFor(model => model.TinhTrangHienThi, new SelectList(new[] {
                    new SelectListItem {Value = null, Text = "-- Chọn --" },
                    new SelectListItem {Value = "0", Text = "Ẩn đi" },
                    new SelectListItem {Value = "1", Text = "Hiện ra" },
                }, "Value", "Text"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TinhTrangHienThi, "", new { @class = "text-danger" })
            </div>

           <div class="form-group">
                    @Html.LabelFor(model => model.DuLieuHinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
                    <br />
                    @Html.TextBoxFor(model => model.DuLieuHinhAnh, new { @class = "form-control-file", type = "file" })
                    @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                    <input value="@Model.HinhAnh" name="OldImage" type="hidden" />
                    @if (Model.HinhAnh != null)
                    {
                        <br />
                        <img src="~/@Model.HinhAnh" width="100" class="mt-3" />
                    }
                    @if (ViewBag.Error != null)
                    {
                        <p class="badge rounded-pill badge-danger text-dark" style="font-size:15px;font-weight:bold">@ViewBag.Error</p>
                    }
                </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu lại" class="btn btn-primary" /> hoặc <a class="btn btn-warning" href="@Url.Action("Index")">Trở về trang chủ</a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
