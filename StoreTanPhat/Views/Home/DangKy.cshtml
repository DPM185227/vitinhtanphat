@model StoreTanPhat.Models.KhachHang

@{
    ViewBag.Title = "ĐĂNG KÝ TÀI KHOẢN";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    a {
        color: white;
        font-weight: bold;
        text-decoration: none;
    }

        a:hover {
            color: black;
        }
</style>

<div class="card mt-4 mb-4 border border-primary shadow">
    <h5 class="card-header bg-primary text-white">@ViewBag.Title</h5>
    <div class="card-body">
        @using (Html.BeginForm("DangKy", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GioiTinh)
                @Html.DropDownListFor(model => model.GioiTinh, new SelectList(new[] {
                    new SelectListItem {Value = null, Text = "-- Chọn --" },
                    new SelectListItem {Value = "0", Text = "Nam" },
                    new SelectListItem {Value = "1", Text = "Nữ" },
                }, "Value", "Text"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NamSinh)
                @Html.EditorFor(model => model.NamSinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NamSinh, "", new { @class = "text-danger" })
                @if (ViewBag.ErrorTuoi != null)
                {
                    <p class="text-danger" style="font-size:15px;font-weight:bold">@ViewBag.ErrorTuoi</p>
                }
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Gmail, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Gmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Gmail, "", new { @class = "text-danger" })
                @if (ViewBag.Error_Gmail != null)
                {
                    <p class="text-danger" style="font-size:15px;font-weight:bold">@ViewBag.Error_Gmail </p>
                }
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TenDangNhap, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                @if (ViewBag.Error_TDN != null)
                {
                    <p class="text-danger" style="font-size:15px;font-weight:bold">@ViewBag.Error_TDN</p>
                }
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MatKhau)
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                @if (ViewBag.ErrorPass!= null)
                {
                    <p class="text-danger" style="font-size:15px;font-weight:bold">@ViewBag.ErrorPass</p>

                }
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DuLieuHinhAnh)
                <br />
                @Html.TextBoxFor(model => model.DuLieuHinhAnh, new { @class = "form-control-file", type = "file" })
                @Html.ValidationMessageFor(model => model.DuLieuHinhAnh, "", new { @class = "text-danger" })
                <br />
                @if (ViewBag.Error != null)
                {
                    <p class="badge rounded-pill badge-danger text-danger" style="font-size:15px;font-weight:bold">@ViewBag.Error</p>
                }
            </div>

            <div class="form-group mt-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng ký" class="btn btn-primary" style="font-weight:bold;" /> OR <span class="btn btn-info">@Html.ActionLink("Đăng nhập", "Login")</span>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
