@model IEnumerable<StoreTanPhat.Models.Tinh>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="container">
        <p style="color:black;font-weight:bold;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">CHỌN ĐỊA CHỈ</p>
        <div class="col-12">
            @if( ViewBag.Error != null)
            {
                <span>@ViewBag.Error</span>
            }
            <form action="@Url.Action("AddAdress","Home")" method="post">
                <div class="form-group">
                    <label for="MaTinh">Tỉnh</label>
                    <select class="form-control" name="MaTinh" id="MaTinh" onchange="getHuyen(this.value)">
                        <option value="">----Chọn----</option>
                        @foreach (var item in Model)
                        {
                            <option value="@item.matp">@item.name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="MaHuyen">Huyện</label>
                    <select class="form-control" name="MaHuyen" id="MaHuyen" onchange="getXa(this.value)">
                    </select>
                </div>

                <div class="form-group">
                    <label for="MaXa">Xã</label>
                    <select class="form-control" name="MaXa" id="MaXa">
                    </select>
                </div>

                <div class="form-group">
                    <label for="MaXa">Địa chỉ</label>
                    <input type="text" name="DiaChi" class="form-control" />
                </div>

                <input type="submit" value="Đồng ý" class="btn btn-primary" />
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        function getHuyen(maTinh) {
            $.ajax({
                url: "/Home/Huyen/" + maTinh,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    html += '<option value=0>----Chọn----</option>';
                    $.each(result, function (key, item) {
                        html += '<option value="' + item.maqh + '">' + item.name + '</option>';
                    });
                    $('#MaHuyen').html(html);
                },
                error: function (err) {
                    alert(err.responseText);
                }
            });
        }

        function getXa(maHuyen) {
            $.ajax({
                url: "/Home/Xa/" + maHuyen,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    html += '<option value=0>----Chọn----</option>';
                    $.each(result, function (key, item) {
                        html += '<option value="' + item.xaid + '">' + item.name + '</option>';
                    });
                    $('#MaXa').html(html);
                },
                error: function (err) {
                    alert(err.responseText);
                }
            });
        }
    </script>
}