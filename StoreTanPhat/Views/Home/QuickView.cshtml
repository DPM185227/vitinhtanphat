@model StoreTanPhat.Models.SanPham
@using StoreTanPhat.Models;
<script src="https://sp.zalo.me/plugins/sdk.js"></script>
@{
    var list_image = (List<HinhAnhSanPham>)ViewBag.ListImage;
    var list_product = (List<SanPham>)ViewBag.ListSanPhamTuongTu;
    var reviews = (List<BinhLuan>)ViewBag.ListComment;
    var list_comment_rep = (List<PhanHoiBinhLuan>)ViewBag.ListCommentRep;
}
<!--Tính sao-->
@{
    double avg_star = 0;
    if (reviews.Count > 0)
    {
        avg_star = (double)reviews.Average(m => m.Star);
        if (avg_star >= 0.5 && avg_star < 0.9)
        {
            avg_star = 1;
        }
        else if (avg_star >= 1.5 && avg_star < 1.9)
        {
            avg_star = 2;
        }
        else if (avg_star >= 2.5 && avg_star < 2.9)
        {
            avg_star = 3;
        }
        else if (avg_star >= 3.5 && avg_star < 3.9)
        {
            avg_star = 4;
        }
        else if (avg_star >= 4.5 && avg_star < 4.9)
        {
            avg_star = 5;
        }
    }

}
<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb-tree">
                    <li><a href="#">Trang chủ</a></li>
                    <li><a href="#">@Model.DanhMucSanPhamCon.DanhMucSanPham.TenDanhMuc</a></li>
                    <li><a href="#">@Model.DanhMucSanPhamCon.TenDMSPC</a></li>
                    <li class="active">@Model.TenSanPham</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- Product main img -->
            <div class="col-md-5 col-md-push-2">
                <div id="product-main-img">
                    @foreach (var item in list_image)
                    {
                        <div class="product-preview">
                            <img src="~/@item.HinhAnh" alt="" width="300">
                        </div>
                    }

                </div>
            </div>
            <!-- /Product main img -->
            <!-- Product thumb imgs -->
            <div class="col-md-2  col-md-pull-5">
                <div id="product-imgs">
                    @foreach (var item in list_image)
                    {
                        <div class="product-preview">
                            <img src="~/@item.HinhAnh" alt="" width="300">
                        </div>
                    }
                </div>
            </div>
            <!-- /Product thumb imgs -->
            <!-- Product details -->
            <div class="col-md-5">
                <div class="product-details">
                    <h2 class="product-name">@Model.TenSanPham</h2>
                    @if (avg_star == 1)
                    {
                        <div class="rating-stars">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                        </div>
                    }
                    else if (avg_star == 2)
                    {
                        <div class="rating-stars">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                        </div>
                    }
                    else if (avg_star == 3)
                    {
                        <div class="rating-stars">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                        </div>
                    }
                    else if (avg_star == 4)
                    {
                        <div class="rating-stars">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                        </div>
                    }
                    else if (avg_star == 5)
                    {
                        <div class="rating-stars">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                        </div>
                    }
                    else
                    {
                        <div class="rating-stars">
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                        </div>
                    }
                    <span class="review-link">@reviews.Count() <span>Bình Luận</span></span>
                    <div>
                        <h3 class="product-price">
                            @Model.GiaBan.ToString("N0")đ
                            @if (Model.GiaKhuyenMai != null)
                            {
                                <del class="product-old-price">@Model.GiaKhuyenMai.Value.ToString("N0")đ</del>
                            }
                        </h3>

                        @if (Model.BaoHanh == "0")
                        {
                            <span class="product-available">12 Tháng</span>
                        }
                        else
                        {
                            <span class="product-available">12 Tháng</span>
                        }

                    </div>
                    <p>@Html.Raw(Model.KhuyenMai)</p>

                    <div class="add-to-cart">
                        <button onclick="location.href='@Url.Action("AddToCart","Home",new{ id = Model.ID_SanPham })'" class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ</button>
                    </div>

                    <ul class="product-links">
                        <li>Danh Mục Con:</li>
                        <li><a href="#">@Model.DanhMucSanPhamCon.TenDMSPC</a></li>
                        <li>Danh Mục:</li>
                        <li><a href="#">@Model.DanhMucSanPhamCon.DanhMucSanPham.TenDanhMuc</a></li>
                    </ul>

                    <ul class="product-links">
                        <li>Share:<div class="zalo-share-button" data-href="" data-oaid="579745863508352884" data-layout="1" data-color="blue" data-customize="false"></div></li>

                    </ul>

                </div>
            </div>
            <!-- /Product details -->
            <!-- Product tab -->
            <div class="col-md-12">
                <div id="product-tab">
                    <!-- product tab nav -->
                    <ul class="tab-nav">
                        <li class="active"><a data-toggle="tab" href="#tab1">Mô tả</a></li>
                        <li><a data-toggle="tab" href="#tab3">Bình Luận</a></li>
                    </ul>
                    <!-- /product tab nav -->
                    <!-- product tab content -->
                    <div class="tab-content">
                        <!-- tab1  -->
                        <div id="tab1" class="tab-pane fade in active">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>@Html.Raw(Model.Motasanpham)</p>
                                </div>
                            </div>
                        </div>
                        <!-- /tab1  -->
                        <!-- tab3  -->
                        <div id="tab3" class="tab-pane fade in">
                            <div class="row">
                                <!-- Rating -->
                                <div class="col-md-3">
                                    <div id="rating">
                                        <div class="rating-avg">
                                            <span>@avg_star</span>
                                            @if (avg_star == 1)
                                            {
                                                <div class="rating-stars">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                            }
                                            else if (avg_star == 2)
                                            {
                                                <div class="rating-stars">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                            }
                                            else if (avg_star == 3)
                                            {
                                                <div class="rating-stars">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                            }
                                            else if (avg_star == 4)
                                            {
                                                <div class="rating-stars">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                            }
                                            else if (avg_star == 5)
                                            {
                                                <div class="rating-stars">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="rating-stars">
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                            }
                                        </div>
                                        <ul class="rating">
                                            <li>
                                                <div class="rating-stars">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                </div>
                                                @{
                                                    int sum_star_5 = reviews.Where(m => m.ID_SanPham == Model.ID_SanPham && m.Star == 5).Count();
                                                    int sum_star_4 = reviews.Where(m => m.ID_SanPham == Model.ID_SanPham && m.Star == 4).Count();
                                                    int sum_star_3 = reviews.Where(m => m.ID_SanPham == Model.ID_SanPham && m.Star == 3).Count();
                                                    int sum_star_2 = reviews.Where(m => m.ID_SanPham == Model.ID_SanPham && m.Star == 2).Count();
                                                    int sum_star_1 = reviews.Where(m => m.ID_SanPham == Model.ID_SanPham && m.Star == 1).Count();
                                                }
                                                <div class="rating-progress">
                                                    <div style="width: 60%;"></div>
                                                </div>
                                                <span class="sum">(@sum_star_5)</span>
                                            </li>
                                            <li>
                                                <div class="rating-stars">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                                <div class="rating-progress">
                                                    <div style="width: 60%;"></div>
                                                </div>
                                                <span class="sum">(@sum_star_4)</span>
                                            </li>
                                            <li>
                                                <div class="rating-stars">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                                <div class="rating-progress">
                                                    <div></div>
                                                </div>
                                                <span class="sum">(@sum_star_3)</span>
                                            </li>
                                            <li>
                                                <div class="rating-stars">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                                <div class="rating-progress">
                                                    <div></div>
                                                </div>
                                                <span class="sum">(@sum_star_2)</span>
                                            </li>
                                            <li>
                                                <div class="rating-stars">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                                <div class="rating-progress">
                                                    <div></div>
                                                </div>
                                                <span class="sum">(@sum_star_1)</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <!-- /Rating -->
                                <!-- Reviews -->
                                <div class="col-md-6">
                                    <div id="reviews">
                                        <ul class="reviews">
                                            @if (reviews == null)
                                            {
                                                <li>
                                                    <span>SẢN PHẨM CHƯA CÓ BÌNH LUẬN</span>
                                                </li>
                                            }
                                            else
                                            {

                                                foreach (var item in reviews)
                                                {
                                                    <li>
                                                        <div class="review-heading">
                                                            <h5 class="name" style="font-size:15px;">@item.KhachHang.HoTen</h5>
                                                            <p class="date">@item.NgayBinhLuan</p>
                                                            @if (item.Star == 1)
                                                            {
                                                                <div class="review-rating">
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star-o empty"></i>
                                                                    <i class="fa fa-star-o empty"></i>
                                                                    <i class="fa fa-star-o empty"></i>
                                                                    <i class="fa fa-star-o empty"></i>
                                                                </div>
                                                            }
                                                            else if (item.Star == 2)
                                                            {
                                                                <div class="review-rating">
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star-o empty"></i>
                                                                    <i class="fa fa-star-o empty"></i>
                                                                    <i class="fa fa-star-o empty"></i>
                                                                </div>
                                                            }
                                                            else if (item.Star == 3)
                                                            {
                                                                <div class="review-rating">
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star-o empty"></i>
                                                                    <i class="fa fa-star-o empty"></i>
                                                                </div>
                                                            }
                                                            else if (item.Star == 4)
                                                            {
                                                                <div class="review-rating">
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star-o empty"></i>
                                                                </div>
                                                            }
                                                            else if (item.Star == 5)
                                                            {
                                                                <div class="review-rating">
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                </div>
                                                            }
                                                        </div>
                                                        <div class="review-body">
                                                            <p>@item.NoiDung</p>
                                                            @if (!item.HinhAnh.Equals("/Images/Comment/No_Image.png"))
                                                            {
                                                                <p><img src="~/@item.HinhAnh" width="100" /></p>
                                                            }
                                                            <hr />
                                                        </div>

                                                        <!--Comment rep-->
                                                        @foreach (var items in list_comment_rep.Where(m => m.ID_BinhLuan == item.ID_BinhLuan && m.HienThi == 1).ToList())
                                                        {
                                                            <div class="review-body" style="margin-right:40px;">
                                                                @if (items.ID_KhachHang != null)
                                                                {
                                                                    <h5 class="name">@items.KhachHang.HoTen.ToString()</h5>
                                                                }
                                                                else if (items.ID_NhanVien != null)
                                                                {
                                                                    <h5 class="name"><i class="fa fa-user-circle" aria-hidden="true"></i> Nhân Viên : @items.NhanVien.TenNhanVien.ToString() <i class="fa fa-check" aria-hidden="true"></i></h5>
                                                                }
                                                                <p class="date" style="font-size:12px;">@items.NgayBinhLuan</p>
                                                                <p>@items.NoiDung</p>
                                                                @if (items.HinhAnh != "/Images/Comment/No_Image.png")
                                                                {
                                                                    <p><img src="~/@items.HinhAnh" width="100" /></p>
                                                                }

                                                            </div>
                                                            <hr />

                                                        }
                                                        <form class="review-form ml-4" action="@Url.Action("AddReply","Home")" method="post" enctype="multipart/form-data">
                                                            <textarea class="input" placeholder="Your Review" name="NoiDung"></textarea>
                                                            <input class="input" type="file" name="file" style="border: 0px;margin-top:10px;">
                                                            <input type="hidden" value="@item.ID_BinhLuan" name="ID_BinhLuan">
                                                            <input type="submit" value="Bình Luận" class="btn btn-primary" />
                                                            <input type="hidden" value="@Model.ID_SanPham" name="ID_SanPham">
                                                        </form>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                        <ul class="reviews-pagination">
                                            <li class="active">1</li>
                                            <li><a href="#">2</a></li>
                                            <li><a href="#">3</a></li>
                                            <li><a href="#">4</a></li>
                                            <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <!-- /Reviews -->
                                <!-- Review Form -->
                                <div class="col-md-3">
                                    <div id="review-form">
                                        <form class="review-form" action="@Url.Action("AddComment","Home")" method="post" enctype="multipart/form-data">
                                            <textarea class="input" placeholder="Your Review" name="NoiDung"></textarea>
                                            <input class="input" type="file" name="file" style="border: 0px;margin-top:10px;">
                                            <div class="input-rating" style="margin-right:100px;">
                                                <span>Your Rating: </span>
                                                <div class="stars">
                                                    <input id="star5" name="rating" value="5" type="radio"><label for="star5"></label>
                                                    <input id="star4" name="rating" value="4" type="radio"><label for="star4"></label>
                                                    <input id="star3" name="rating" value="3" type="radio"><label for="star3"></label>
                                                    <input id="star2" name="rating" value="2" type="radio"><label for="star2"></label>
                                                    <input id="star1" name="rating" value="1" type="radio"><label for="star1"></label>
                                                </div>
                                            </div>
                                            <input type="hidden" value="@Model.ID_SanPham" name="ID_SanPham">
                                            <input type="submit" value="Bình Luận" class="btn btn-primary mt-3" />
                                        </form>
                                    </div>
                                </div>

                                <!-- /Review Form -->
                            </div>
                        </div>
                        <!-- /tab3  -->
                    </div>
                    <!-- /product tab content  -->
                </div>
            </div>
            <!-- /product tab -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
