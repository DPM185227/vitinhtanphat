@model StoreTanPhat.Models.MaGiamGia
@if (ViewBag.Error != null)
{
    <span class="badge bg-danger text-white">@ViewBag.Error</span>
}
<div class="card mt-3">
    <h5 class="card-header">MÃ GIẢM GIÁ</h5>
    <div class="card-body">
        <form action="CheckSale" method="Post">
            <div class="form-group">
                <label>Mã giảm giá</label>
                <input name="Key" type="text" class="form-control" />
                <input type="submit" value="Kiểm tra" class="mt-3" />
            </div>
        </form>
        <a href="@Url.Action("ThankYou","Home")" class="btn btn-primary">Hoàn tất đơn hàng</a>
    </div>
</div>

